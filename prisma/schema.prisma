datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String
  company   String
  joinDate  DateTime
  salary    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
